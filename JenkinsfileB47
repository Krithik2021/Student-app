def user = "admin"

pipeline {
    agent any

    stages {
        stage('Pull the Code') {
            steps {
                echo 'Pulling code from Repo'
            }
        }
        stage('Compile') {
            steps {
                echo "Compiling Code by '${user}' user"
            }
        }
        stage('Pre-Deployment') {
            steps {
                echo 'Pre Deployment'
            }
        }
    }
}
