pipeline {
    agent any

    tools {
        maven 'maven3' 
    }

    stages {
        stage('Pull the Code') {
            steps {
                echo 'Pulling code from Repo'
                git branch: 'main', url: 'https://gitlab.com/rns-app/student-app.git'
                sh 'mvn --version'
                sh 'java -version'
            }
        }
        stage('Compile') {
            steps {
                echo "Compiling Code"
                sh 'mvn clean compile'
            }
        }
        stage('Pre-Deployment') {
            steps {
                echo 'Pre Deployment'
                sh 'mvn clean test'
            }
        }
    }
}
