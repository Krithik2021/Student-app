pipeline {
    agent any

    stages {
        stage('Compile The Source Code') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Pre-Deployment Tests') {
            steps {
                echo 'How are you?'
            }
        }
        stage('Packaging') {
            steps {
                echo 'Welcome to Pipeline Script'
            }
        }
    }
}
