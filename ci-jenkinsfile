def version = "1.0"

pipeline {
    agent {
        label "buildserver"
    }

    tools {
        maven 'maven3.8'
    }

    stages {
        stage('Clone Source Code') {
            steps {
                echo 'Cloning Repository...'
                git branch: 'main', credentialsId: 'gitlab', url: 'https://gitlab.com/rns-app/student-app.git'
            }
        }
        stage('Compile') {
            steps {
                echo 'Compile Source Code'
                sh "mvn clean compile"
            }
        }
        stage('Unit-Testing') {
            steps {
                echo 'Testing...'
                sh "echo 2 | sudo alternatives --config java"
                sh "mvn clean test"
            }
            post{
              success {
                junit 'target/surefire-reports/*.xml'
              }
            }
        }
        stage('Packaging') {
            steps {
                sh "echo 1 | sudo alternatives --config java"
                echo "Packaging version = '${version}'"
            }
        }
        stage('Update DB Schema') {
            steps {
                echo "Updating DB Schema..."
            }
        }
    }
}
